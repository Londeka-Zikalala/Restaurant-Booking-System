<h1 class="title is-2" >Bookings</h1>

    <div class="notification is-danger is-light">
        {{!-- you can remove the button below if you want --}}
        <button class="delete"></button>
         {{!-- Error Flash messages goes here... --}}
         {{#if messages.error}}
        <div class="">
            {{messages.error}}
        </div>
        {{/if}}
    </div>
    <div class="notification is-success is-light">
        {{!-- you can remove the button below if you want --}}
        <button class="delete"></button>
        {{#if messages.success}}
        <div class="">
            {{messages.success}}
        </div>
        {{/if}}
    </div>

    <table class="table is-fullwidth">
    <tr>
        <th>Table name</th>
        <th>Table capacity</th>
        <th>Booking size</th>
        <th>Booked by</th>
        <th>Contact number</th>
        <th></th>
    </tr>
    {{#each bookedTables}}
    <tr>
        <td>{{this.table_name}}</td>
        <td>{{this.capacity}}</td>
        <td>{{this.number_of_people}}</td>
        <td>{{this.username}}</td>
        <td>{{this.contact_number}}</td>
        <td>
            <form action="/cancel" method="post">
                <input type="hidden" name="tableName" value="{{this.table_name}}">
                <button class="button is-warning">Cancel booking</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>
